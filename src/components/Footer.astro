---
import Hr from "./Hr.astro";

const currentYear = new Date().getFullYear();

export interface Props {
  noMarginTop?: boolean;
}

const { noMarginTop = false } = Astro.props;
---

<footer class:list={["w-full", { "mt-auto": !noMarginTop }]}>
  <Hr />
  <div class="mx-auto w-full max-w-5xl px-2">
    <div
      class="flex flex-col items-center justify-center py-6 sm:py-4"
    >
      <div class="text-lg text-muted-foreground flex items-center gap-4">
        <span>&#169; {currentYear}</span>
        <a href="/impressum" class="hover:text-accent">Impressum</a>
        <a href="/datenschutz" class="hover:text-accent">Datenschutz</a>
      </div>
    </div>
  </div>
</footer>
