---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import Hr from "@/components/Hr.astro";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";
---

<Layout title="Paul Graßl" description="Artist Portfolio">
  <Header />
  <main id="main-content" data-layout="index">
    <section id="hero" class="pt-8 pb-6">
      <h1 class="my-4 inline-block text-4xl font-bold sm:my-8 sm:text-5xl">
        Paul Graßl
      </h1>
      <p class="text-lg text-muted-foreground">
        Artist working in [your medium/location]
      </p>
      <p class="mt-4">
        Welcome to my portfolio. Here you can explore my recent works, 
        upcoming exhibitions, and learn more about my artistic practice.
      </p>
      {
        // only display if at least one social link is enabled
        SOCIALS.length > 0 && (
          <div class="mt-4 flex flex-col sm:flex-row sm:items-center">
            <div class="me-2 mb-1 whitespace-nowrap sm:mb-0">Follow:</div>
            <Socials />
          </div>
        )
      }
    </section>

    <Hr />

    <section id="current-work" class="pt-12 pb-6">
      <h2 class="text-2xl font-semibold tracking-wide mb-8">Current Work</h2>
      <div class="grid gap-8 md:grid-cols-2">
        <div class="group cursor-pointer">
          <div class="aspect-[4/3] bg-muted rounded-lg mb-4"></div>
          <h3 class="text-lg font-semibold text-foreground">Recent Artwork</h3>
          <p class="text-sm text-muted-foreground">Oil on canvas, 80x120 cm</p>
          <p class="text-sm text-muted-foreground">2024</p>
        </div>
        <!-- Add more current works here -->
      </div>
          </section>

    <Hr />

    <section id="current-exhibitions" class="pt-12 pb-6">
      <h2 class="text-2xl font-semibold tracking-wide mb-8">Current Exhibitions</h2>
      <div class="space-y-6">
        <div class="border-l-4 border-accent pl-4">
          <h3 class="text-lg font-semibold text-foreground">Exhibition Title</h3>
          <p class="text-sm text-muted-foreground">Gallery Name, City</p>
          <p class="text-sm text-muted-foreground">March - May 2024</p>
        </div>
        <!-- Add more current exhibitions here -->
    </div>
    </section>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
