---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { SITE } from "@/config";
import { getCollection } from "astro:content";

const title = "Exhibitions";
const description = "Exhibitions by Paul Gra√ül";
const exhibitions = await getCollection("exhibitions");
---

<Layout title={title} description={description}>
	<Header />
	<main id="main-content">
		<section class="mx-auto w-full max-w-6xl px-2 py-8 flex flex-col items-center">
			{exhibitions.map(exhibition => (
				        <div class="flex flex-col w-full max-w-5xl mb-16">
          <div class="w-full aspect-[3/2] bg-muted overflow-hidden flex items-center justify-center">
            <img src={exhibition.data.image} alt={exhibition.data.title} class="object-cover w-full h-full" loading="lazy" />
          </div>
          <div class="mt-4 w-full">
            <h3 class="text-sm italic text-foreground font-normal leading-tight">{exhibition.data.title}</h3>
            <div class="mt-1 flex flex-col gap-y-1 text-sm text-muted-foreground">
              <span>{exhibition.data.location}</span>
              <span>{exhibition.data.period}</span>
            </div>
          </div>
				</div>
			))}
		</section>
	</main>
	<Footer />
</Layout> 