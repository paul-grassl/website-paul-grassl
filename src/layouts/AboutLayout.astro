---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import Layout from "./Layout.astro";
import { SITE } from "@/config";

export interface Props {
  frontmatter: {
    title: string;
    description?: string;
  };
}

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} | ${SITE.title}`}>
  <Header />
  <Breadcrumb />
  <main id="main-content">
    <section id="about" class="mx-auto w-full max-w-5xl px-6 py-8 text-lg">
      <slot />
    </section>
  </main>

  <style is:global>
    /* Studio photo styling - simplified for Astro */
    section#about img:first-of-type {
      max-width: 32rem;
      width: 100%;
      height: auto;
      margin: 0 auto 2rem auto; /* Added bottom margin for spacing */
      display: block;
    }


    /* CV sections - styled like "Works 2025" title but bold */
    section#about h2 {
      font-size: 1.5rem; /* text-2xl equivalent */
      font-weight: bold; /* Changed to bold */
      line-height: 1.25; /* leading-tight equivalent */
      margin-bottom: 1rem; /* Increased from 0.5rem to 1rem for more spacing */
      margin-top: 3rem;
      color: var(--foreground); /* text-foreground equivalent */
    }

    /* CV items layout */
    section#about .cv-item {
      display: flex;
      margin-bottom: 1.25rem;
      gap: 1rem;
    }

    section#about .cv-year {
      font-weight: normal;
      width: 8rem;
      flex-shrink: 0;
      text-align: left;
      color: inherit; /* Ensure it inherits the proper text color */
    }

    /* Ensure proper text color for CV years in dark mode */
    html[data-theme="dark"] section#about .cv-year {
      color: var(--foreground); /* Use theme's foreground color for dark mode */
    }

    section#about .cv-content {
      flex: 1;
      line-height: 1.6;
      color: inherit; /* Ensure it inherits the proper text color */
    }

    /* Ensure proper text color in dark mode for all CV content */
    html[data-theme="dark"] section#about .cv-content {
      color: var(--foreground); /* Use theme's foreground color for dark mode */
    }

    /* Show type styling - responsive to light/dark mode */
    section#about .cv-content .show-type {
      color: #6b7280; /* text-gray-500 for light mode */
      font-size: 0.9em;
    }

    /* Dark mode styling */
    html[data-theme="dark"] section#about .cv-content .show-type {
      color: #9ca3af; /* text-gray-400 for dark mode - lighter gray */
    }


    /* Mobile responsive adjustments */
    @media (max-width: 639px) {
      section#about .cv-item {
        flex-direction: column;
        gap: 0.25rem;
      }
      
      section#about .cv-year {
        width: auto;
      }
    }
  </style>
  <Footer />
</Layout>
