{
  // Astro-spezifische Einstellungen
  "astro.trace.server": "verbose",
  "files.associations": {
    "*.astro": "astro"
  },
  // Editor-Einstellungen
  "editor.formatOnSave": true,
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  // TypeScript-Einstellungen
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  // Datei-Ausschl端sse f端r bessere Performance
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/.astro": true
  },
  // Search-Ausschl端sse
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.astro": true,
    "**/pnpm-lock.yaml": true,
    "**/public/pagefind": true
  },
  // Emmet f端r Astro
  "emmet.includeLanguages": {
    "astro": "html"
  },
  // GitHub Copilot
  "github.copilot.enable": {
    "*": true,
    "astro": true,
    "markdown": true
  }
}